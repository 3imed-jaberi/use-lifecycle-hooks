{
  "env": {
    "browser": true,
    "jest/globals": true
  },
  "extends": [
    "plugin:prettier/recommended", 
    "eslint:recommended", 
    "plugin:react/recommended"
  ],
  "plugins": [
    "react-hooks",
    "jest"
  ],
  "rules": {
    "react-hooks/rules-of-hooks": "error", // Checks rules of Hooks
    "react-hooks/exhaustive-deps": "warn", // Checks effect dependencies
    "no-console": "error"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  }
}
